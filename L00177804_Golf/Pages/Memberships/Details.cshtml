@page
@model L00177804_Golf.Pages.Memberships.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<h1>Welcome back @Html.DisplayFor(model => model.Membership.FirstName)</h1>
    <div class="container" style = "padding-top:50px">
        <div class="text-center">
            <!-- Membership details -->
            <dl class="row">
                <dt class="col-sm-2">
                    First Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Membership.FirstName)
                </dd>
                <dt class="col-sm-2">
                    Surname
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Membership.LastName)
                </dd>
                <dt class="col-sm-2">
                    Gender
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Membership.Gender)
                </dd>
                <dt class="col-sm-2">
                    Handicap
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Membership.Handicap)
                </dd>
                <dt class="col-sm-2">
                    Phone
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Membership.Phone)
                </dd>
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Membership.Email)
                </dd>
            </dl>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto">
                <a asp-page="./Edit" asp-route-id="@Model.Membership?.Id" class="btn btn-primary">Edit</a>
            </div>
            <div class="col-auto">
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>


