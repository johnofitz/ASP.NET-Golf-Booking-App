@page
@model L00177804_Golf.Pages.Memberships.CreateModel

@{
    ViewData["Title"] = "Create";
}

<!-- Section: Design Block -->
<section class="">
    <!-- Jumbotron -->
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
        <div class="container">
            <div class="row gx-lg-5 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <h1 class="my-5 display-3 fw-bold ls-tight">
                        Your Journey <br />
                        <span class="text-primary">begins here</span>
                    </h1>
                    <p>
                        Registration is free, complete the form
                        and Hit'Em long and straight.
                    </p>
                 
                    <img src="/Images/billMurray.jpg" class="img-fluid" style="height:340px">
                    </div>
                

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card">
                        <div class="card-body py-5 px-md-5">
                            <form method="post">
                                <!-- 2 column grid layout with text inputs for the first and last names -->
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <input asp-for="Membership.FirstName" class="form-control" />
                                            <label class="form-label" for="form3Example1">First name</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <input asp-for="Membership.LastName" class="form-control" />
                                            <label class="form-label" for="form3Example2">Last name</label>
                                        </div>
                                    </div>
                                </div>

                                <!-- Gender input -->
                                <div class="form-outline mb-4">
                                    <input asp-for="Membership.Gender" class="form-control" />
                                    <label class="form-label" for="form3Example3">Gender</label>
                                </div>

                                <!-- HandiCap input -->
                                <div class="form-outline mb-4">
                                    <input asp-for="Membership.Handicap" class="form-control" />
                                    <label class="form-label" for="form3Example3">Handicap</label>
                                </div>

                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <input asp-for="Membership.Email" class="form-control" />
                                    <label class="form-label" for="form3Example3">Email address</label>
                                </div>

                                <!-- Phone input -->
                                <div class="form-outline mb-4">
                                    <input asp-for="Membership.Phone" class="form-control" />
                                    <label class="form-label" for="form3Example4">Phone</label>
                                </div>

                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary btn-block mb-4">
                                    Sign up
                                </button>
 
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
